<resources>

    <style name="AppTheme" parent="Base.Theme.DesignDemo">
        <item name="android:windowBackground">@color/ls_item</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:actionMenuTextColor">@color/material_deep_teal_500</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_white_24dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ActTheme" parent="Base.Theme.DesignDemo">
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="Act" parent="Base.Theme.DesignDemo">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Base.Theme.DesignDemo" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#ff009688</item>
        <item name="colorPrimaryDark">#ff009688</item>
        <item name="colorAccent">#ffffdc7e</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="FontTitle">
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
        <!--<item name="android:textColor">#444</item>-->
    </style>

    <style name="FontActicle">
        <item name="fontPath">fonts/Roboto-Light.ttf</item>
    </style>

    <style name="FontComm">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>

</resources>
